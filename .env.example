# Environment Configuration for Approvarr Discord Bot

# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here
CHANNEL_ID=your_discord_channel_id_here
SERVER_ID=your_discord_server_id_here

# Overseerr Configuration
OVERSEERR_URL=http://localhost:5055
OVERSEERR_API_KEY=your_overseerr_api_key_here

# Feature Toggles
# Set to 'true' to enable Discord slash commands
ENABLE_SLASH_COMMANDS=true

# Set to 'true' to enable quota checking functionality
# When enabled, users can use /quota_status command
# When disabled, the quota_status command will not be registered at all
ENABLE_QUOTA_CHECK=true